<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorAccent</item>
        <item name="colorPrimaryDark">@color/colorAccent</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="Driver" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/driver_color</item>
        <item name="colorPrimaryDark">@color/driver_color</item>
        <item name="colorAccent">@color/driver_color</item>
    </style>

    <style name="Login" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/login_color</item>
        <item name="colorPrimaryDark">@color/login_color</item>
        <item name="colorAccent">@color/login_color</item>
    </style>

    <style name="Passenger" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/passenger_color</item>
        <item name="colorPrimaryDark">@color/passenger_color</item>
        <item name="colorAccent">@color/passenger_color</item>
    </style>


    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

</resources>
