<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="8dp"
    android:paddingRight="8dp"
    android:orientation="vertical"
    android:background="@color/white"
    tools:context=".Passenger.home_screen">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_centerVertical="true">
        <ImageView
            android:id="@+id/splashscreen"
            android:src="@drawable/angkaslogopic"
            android:scaleType="fitXY"
            android:layout_width="300dp"
            android:layout_height="200dp"
            android:layout_gravity="center"
            android:gravity="center"/>
        <Button
            android:id="@+id/DriverButton"
            android:onClick="driver"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_gravity="center"
            android:background="@drawable/driverbtn"
            android:text="@string/driver"
            android:textSize="20dp"
            android:textColor="@color/black"
            android:drawableLeft="@drawable/driver"
            android:paddingLeft="50dip"
            android:drawablePadding="-50dp"
            android:layout_marginBottom="5dp"/>
        <Button
            android:id="@+id/PassengerButton"
            android:onClick="passenger"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_gravity="center"
            android:background="@drawable/passengerbtn"
            android:text="@string/passenger"
            android:textSize="20dp"
            android:textColor="@color/black"
            android:drawableLeft="@drawable/passenger"
            android:paddingLeft="50dip"
            android:drawablePadding="-55dp" />
    </LinearLayout>

</RelativeLayout>
